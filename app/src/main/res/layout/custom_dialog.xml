<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.synerzip.aapoc.CustomProgressDialog"
    android:layout_gravity="center"
    android:id="@+id/parent_layout"
    android:theme="@style/CustomDialog">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/common_dimens_40"
        android:layout_height="@dimen/common_dimens_40"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:src="@drawable/custom_progress_white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:textColor="@color/common_color_black"
        android:layout_below="@+id/imageView"/>

</RelativeLayout>
